<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>

<div class="field">
  <p>
    <%= f.collection_select :company_id, Company.all, :id, :name, prompt: true %>
    </p>
  </div>

<div class="field">
  <p>
    <%= f.collection_select :role_id, UserRole.all, :id, :role_name, prompt: true %>
    </p>
  </div>

  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.text_field :start_date, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.text_field :end_date, autofocus: true %>
  </div>
<div class="field">
  <p>
    <%= f.collection_select :image_id, Image.all, :id, :image_name, prompt: true %>
    </p>
  </div>

<div class="field">
  <p>
    <%= f.label :active %><br>
    <%= f.check_box :active %>
  </p>
  </div>

<div class="field">
<p>
    <%= f.label :monthly_charge %><br>
    <%= f.number_field :monthly_charge %>
  </p>
    </div>

    <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_field :notes, autofocus: true %>
  </div>
<div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
