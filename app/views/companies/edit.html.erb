<h1>Edit Companies</h1>
<%= form_for :company, url: companies_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.collection_select :country_id, Country.all, :id, :country_name, prompt: true %>
    </p>

    <p>
    <%= f.collection_select :state_id, State.all, :id, :state_name, prompt: true %>
    </p>

    <p>
    <%= f.collection_select :city_id, City.all, :id, :city_name, prompt: true %>
    </p>

    <p>
    <%= f.label :postcode %><br>
    <%= f.text_field :postcode %>
  </p>
  <p>
    <%= f.label :start_date %><br>
    <%= f.text_field :start_date %>
  </p>

  <p>
    <%= f.label :active %><br>
    <%= f.check_box :active %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', companies_path %>